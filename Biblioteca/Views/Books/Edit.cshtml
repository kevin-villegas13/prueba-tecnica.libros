@model Biblioteca.DTO.Book.UpdateBookDto

<div class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold text-white mb-6">✏️ Editar Libro</h1>

    <div class="bg-gray-800 p-6 rounded-lg shadow-lg">
        <form asp-action="Edit" method="post" class="flex flex-col space-y-4">
            <div>
                <label class="text-white block mb-2">Título del Libro:</label>
                <input asp-for="Title" class="w-full p-2 rounded-md bg-gray-700 text-white border border-gray-600" required />
                <span asp-validation-for="Title" class="text-red-500"></span>
            </div>

            <div>
                <label class="text-white block mb-2">Seleccionar Autor:</label>
                <select asp-for="AuthorId" asp-items="ViewBag.Authors" class="w-full p-2 rounded-md bg-gray-700 text-white">
                    <option value="">Seleccione un Autor</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-red-500"></span>
            </div>

            <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded-lg hover:bg-yellow-600">
                💾 Guardar Cambios
            </button>
        </form>
    </div>
</div>
