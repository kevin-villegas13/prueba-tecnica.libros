@model Biblioteca.DTO.Author.UpdateAuthorDto

@{
    ViewData["Title"] = "Editar Autor";
}

<div class="max-w-4xl mx-auto px-6 py-10 bg-gray-800 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-white mb-4">Editar Autor</h2>

    <form asp-action="Edit" method="post">

        <div class="mb-4">
            <label asp-for="Name" class="block text-gray-300">Nombre del Autor</label>
            <input asp-for="Name" class="w-full px-4 py-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div class="mb-6">
            <h3 class="text-xl font-semibold text-white">Libros Asociados</h3>
            <div class="space-y-2 mt-2">
                @foreach (var book in Model.Books ?? Enumerable.Empty<Biblioteca.DTO.Book.BookDto>())
                {
                    <div class="flex items-center justify-between bg-gray-700 p-3 rounded-md text-gray-300 shadow-sm">
                        <span>📖 @book.Title</span>
                        <a asp-action="EditBook" asp-route-id="@book.Id"
                           class="bg-blue-500 hover:bg-blue-600 text-white text-sm px-3 py-1 rounded">
                            ✏️ Editar
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="flex justify-between">
            <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">Volver</a>
            <button type="submit" class="bg-green-600 px-4 py-2 rounded text-white hover:bg-green-700">Actualizar</button>
        </div>
    </form>
</div>
