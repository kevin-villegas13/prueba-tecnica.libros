@model Biblioteca.DTO.Author.CreateAuthorDto

@{
    ViewData["Title"] = "Agregar Autor";
}

<div class="max-w-4xl mx-auto px-6 py-10 bg-gray-800 rounded-lg shadow-lg">
    <h2 class="text-2xl font-bold text-white mb-4">Agregar Nuevo Autor</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-4">
            <label asp-for="Name" class="block text-gray-300">Nombre del Autor</label>
            <input asp-for="Name" class="w-full px-4 py-2 rounded bg-gray-700 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex justify-between">
            <a asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700">Volver</a>
            <button type="submit" class="bg-blue-600 px-4 py-2 rounded text-white hover:bg-blue-700">Guardar</button>
        </div>
    </form>
</div>
