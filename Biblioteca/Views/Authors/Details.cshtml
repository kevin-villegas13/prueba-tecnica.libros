@model Biblioteca.Models.Author

<div class="max-w-4xl mx-auto px-6 py-10 bg-gray-900 rounded-lg shadow-lg">
    <h1 class="text-3xl font-bold text-white mb-6 border-b border-gray-700 pb-2">Detalles del Autor</h1>

    <div class="bg-gray-800 p-6 rounded-lg shadow-md">
        <h2 class="text-2xl font-semibold text-white">@Model.Name</h2>

        <div class="mt-6">
            <h3 class="text-xl font-semibold text-white mb-2">Libros:</h3>
            <div class="space-y-2">
                @foreach (var book in Model.Books ?? Enumerable.Empty<Biblioteca.Models.Book>())
                {
                    <div class="bg-gray-700 p-3 rounded-md text-gray-300 shadow-sm">
                        📖 @book.Title
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="flex justify-start mt-6 space-x-4">
        <a asp-action="Edit" asp-route-id="@Model.AuthorId"
           class="bg-yellow-500 hover:bg-yellow-600 text-gray-900 font-bold py-2 px-4 rounded-lg shadow-md transition">
            ✏️ Editar
        </a>
        <a asp-action="Index"
           class="bg-gray-700 hover:bg-gray-800 text-white font-bold py-2 px-4 rounded-lg shadow-md transition">
            ⬅️ Volver a la Lista
        </a>
    </div>
</div>
