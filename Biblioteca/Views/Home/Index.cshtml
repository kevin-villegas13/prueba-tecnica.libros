@{
    ViewData["Title"] = "Biblioteca";
}

<div class="container mx-auto text-center py-10">
    <!-- Encabezado con icono -->
    <div class="flex justify-center items-center mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 text-blue-700">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v16.5M6.75 3l10.5 4.5M6.75 3l10.5-4.5M6.75 21l10.5-4.5M6.75 21V3M17.25 7.5V21" />
        </svg>
        <h1 class="text-4xl font-bold text-gray-900 dark:text-white ml-4">Biblioteca Digital</h1>
    </div>

    <p class="text-gray-600 dark:text-gray-300 text-lg">
        Explora nuestra colección de libros y autores en línea.
    </p>

    <!-- Botones de acción -->
    <div class="mt-6 flex justify-center space-x-4">
        <a href="@Url.Action("Index", "Books")" class="px-6 py-2 text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition">
            Explorar Libros
        </a>
        <a href="@Url.Action("Index", "Authors")" class="px-6 py-2 text-white bg-green-600 rounded-lg hover:bg-green-700 transition">
            Ver Autores
        </a>
    </div>

    <!-- Sección de categorías -->
    <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">Ficción</h3>
            <p class="text-gray-600 dark:text-gray-400">Sumérgete en historias fascinantes.</p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">Ciencia</h3>
            <p class="text-gray-600 dark:text-gray-400">Descubre el mundo de la ciencia y la tecnología.</p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow">
            <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">Historia</h3>
            <p class="text-gray-600 dark:text-gray-400">Aprende sobre el pasado y su impacto.</p>
        </div>
    </div>
</div>
